<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.santamariaapostol.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ComunicadoController</servlet-name>
        <servlet-class>com.santamariaapostol.controller.ComunicadoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AsistenciaController</servlet-name>
        <servlet-class>com.santamariaapostol.controller.AsistenciaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Home</servlet-name>
        <jsp-file>dashboard.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ListaAsistencia</servlet-name>
        <jsp-file>lista_asistencia.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>CitacionController</servlet-name>
        <servlet-class>com.santamariaapostol.controller.CitacionController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ComunicadoController</servlet-name>
        <url-pattern>/ComunicadoController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AsistenciaController</servlet-name>
        <url-pattern>/AsistenciaController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListaAsistencia</servlet-name>
        <url-pattern>/asistenciaHoy</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CitacionController</servlet-name>
        <url-pattern>/CitacionController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
